<?xml version="1.0" encoding="utf-8"?>


<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:paddingBottom="@dimen/activity_vertical_margin"
            tools:context=".DetailActivity$DetailFragment"
            android:weightSum="1">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="121dp"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Large Text"
                    android:id="@+id/original_title_text"
                    android:background="#008080"
                    android:layout_weight="1.58"
                    android:textAlignment="center"
                    android:gravity="center"
                    android:textSize="30dp" />

                <ImageView
                    android:layout_width="120dp"
                    android:layout_height="180dp"
                    android:id="@+id/miniPosterView"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/original_title_text"
                    android:paddingTop="10dp"
                    android:paddingLeft="16dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Released Date: 2016-10-10"
                    android:id="@+id/release_date_text"
                    android:layout_toRightOf="@id/miniPosterView"
                    android:layout_below="@id/original_title_text"
                    android:paddingTop="16dp"
                    android:paddingLeft="25dp"
                    android:textSize="15dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="New Text"
                    android:id="@+id/rating_text"
                    android:layout_below="@+id/release_date_text"
                    android:layout_toRightOf="@+id/miniPosterView"
                    android:layout_alignStart="@+id/release_date_text"
                    android:paddingTop="16dp"
                    android:paddingLeft="25dp"
                    android:textSize="15dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="New Text"
                    android:id="@+id/overview_text"
                    android:paddingTop="16dp"
                    android:layout_below="@+id/miniPosterView"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />

        </RelativeLayout>

    </ScrollView>

